<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- http://stackoverflow.com/questions/19691530/valid-values-for-androidfontfamily-and-what-they-map-to -->
    <style name="RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="RobotoBold" parent="RobotoMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoBoldItalic" parent="RobotoMedium">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="RobotoThinItalic" >
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoBlack" parent="@style/RobotoBold"/>

</resources>